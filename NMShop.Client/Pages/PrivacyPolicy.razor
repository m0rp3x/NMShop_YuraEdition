            <div class="subheader" id="@i">
                @Textu[i].Item1
            </div>
            <div class="regulartext pr-0">
                <MultilineString Value=@Textu[i].Item2 />
            </div>
        }
    </div>

    <MudHidden Breakpoint="Breakpoint.MdAndUp" Invert="true">
        <div style="height: 100%">
            <div class="ml-5" style="width: 230px; border-radius: 10px; border: 1px solid #A9A9A9; position: fixed; align-self: flex-start;">
                <div style="width: 100%; background: #F0F0F0; border-radius: 10px 10px 0 0; border-bottom: 1px solid #A9A9A9;" class="subheader px-3 py-2">
                    Оглавление
                </div>
                <div class="zubilo" style="max-height: 45vh; width: 100%">
                    @foreach ((int, string) pair in getButtons())
                    {
                        <MudButton OnClick="() => NavigateToHeader(pair.Item1)" Style="white-space: nowrap; background: #FFFFFF; text-transform: none; border-radius:0;" Class="p-3" FullWidth="true">
                            <div class="regulartext p-0" style="text-overflow: ellipsis; overflow: hidden; width: 100%;">
                                @pair.Item2
                            </div>
                        </MudButton>
                    }
                </div>

                <div style="width: 100%; background: #F0F0F0; border-top: 1px solid #A9A9A9; border-radius: 0 0 10px 10px;" class="subheader px-3 py-2">
                    Конец
                </div>
            </div>
        </div>
    </MudHidden>

</div>

