@using NMShop.Client.Layout
@using NMShop.Client.Components
@page "/PrivacyPolicy"
@inject NavigationManager NavigationManager

<PageTitle>Политика конфиденциальности</PageTitle>

<AnchorNavigation />

<div class="PolicyContainer mx-auto d-flex mt-5" >

    <div style="border-radius: 10px; border: 1px solid #A9A9A9; background: #FFFFFF;" class="pa-5 pa-md-10">
        <div class="header mb-2">Политика конфиденциальности KickRooms</div>
        @for (int i = 0; i < Textu.Count(); i++)
