@using NMShop.Client.Components;

<div class="pa-2 pa-md-4 pa-lg-6" style="background-color: black; color: white;">
    <MudHidden Breakpoint="Breakpoint.SmAndDown">
        <MudGrid Class="footer px-5 py-4 mt-4 mt-md-0" Spacing="6">
            @foreach (var sec in Sections)
            {
                <MudItem xs="12" sm="3">
                    <h4 style="margin-bottom: 10px; font-weight: bold;">@sec.Title</h4>
                    <ul style="list-style: none; padding: 0;">
                        @foreach (var link in sec.Links)
                        {
                            <li style="margin-bottom: 8px;">
                                @if (string.IsNullOrWhiteSpace(link.Url))
                                {
                                    @link.Text
                                }
                                else
                                {
                                    <a href="@link.Url" style="color: white; text-decoration: none;">@link.Text</a>
                                }
                            </li>
                        }
                    </ul>
                </MudItem>
            }

            <!-- Социальные иконки -->
            <MudItem xs="12" sm="3">
                <SocialIcons />
            </MudItem>

            <!-- Копирайт -->
            <MudItem xs="12" sm="3">
                <div style="margin-top: 30px; padding-top: 10px;">
                    <p style="font-size: 16px; font-weight: 600;">2018-2024 © Neo Mei</p>
                </div>
            </MudItem>

            <MudItem xs="12" sm="3">
                <div style="margin-top: 30px; padding-top: 10px;">
                    <p style="margin-right: 310px; font-size: 16px; font-weight: 600;">ВСЕ ПРАВА ЗАЩИЩЕНЫ</p>
                </div>
            </MudItem>

            <!-- Политики и соглашения -->
            <MudItem xs="12" sm="3">
                <div>
                    <ul style="list-style: none; padding: 0; margin: 0;">
                        @foreach (var policy in Policies)
                        {
                            <li style="margin-bottom: 8px;">
                                <a href="@policy.Url" style="color: white; text-decoration: none;">@policy.Text</a>
                            </li>
                        }
                    </ul>
                </div>
            </MudItem>
        </MudGrid>
    </MudHidden>

    <MudHidden Breakpoint="Breakpoint.MdAndUp">
        @foreach (var sec in Sections)
        {
            <MudButton OnClick="() => ToggleSection(sec)" Class="my-3 p-0" Style="transition: all 0.25s ease-in-out; width: 100%; display: block; text-transform: none;">
                <div class="d-flex mr-auto my-2">
                    <MudText Class="align-self-center pt-1" Color="Color.Secondary" Typo="Typo.h5">@sec.Title</MudText>

                    <div class="ml-auto" style=@("transition: all 0.25s ease-in-out; width: 40px; aspect-ratio: 1/1; color:white; background-image: url(assets/icons/ArrowIconWhite.svg); background-position: center; background-repeat: no-repeat;" + (OpenedSections.Contains(sec) ? "" : "transform: rotate(-90deg);")) />
                </div>

                <div style=@("transition: all 0.5s ease-in-out; overflow: hidden;" + (OpenedSections.Contains(sec) ? "border-top: 1px solid #b0b0b0;" : "max-height: 0;"))>
                    <div style="text-align:left; font-style: normal; opacity: 0.9; padding: 20px; ">
                        <ul style="list-style: none; padding: 0;">
                            @foreach (var link in sec.Links)
                            {
                                <li style="margin-bottom: 8px;">
                                    <a href="@link.Url" style="color: white; text-decoration: none;">@link.Text</a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </MudButton>
        }

        <div style="margin-top: 20px; padding-top: 10px;">
            <p style="font-size: 16px; font-weight: 600;">2018-2024 © Neo Mei</p>
            <p style="margin-right: 310px; font-size: 16px; font-weight: 600;">ВСЕ ПРАВА ЗАЩИЩЕНЫ</p>
        </div>

        <SocialIcons/>
    </MudHidden>

</div>


