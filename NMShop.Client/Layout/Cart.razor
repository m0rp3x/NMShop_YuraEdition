@using NMShop.Client.Services;

@implements IDisposable

@inject CartService CartService

@if (CartService.IsCartOpen)
{
    <div style=@($"opacity: 1; width: 100vw; height: 100vh; z-index: 9999;")>
        <div style="width: 800px; max-width: 100vw; height: 100vh; background-color: white;">
            <MudText Typo="Typo.h2">Bebra</MudText>
        </div>
    </div>
}

@code {
    protected override void OnInitialized()
    {
        CartService.OnChange += StateHasChanged;
    }

    public void Dispose()
    {
        CartService.OnChange -= StateHasChanged;
    }
}
